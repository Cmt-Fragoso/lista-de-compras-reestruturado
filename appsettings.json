{
  "Application": {
    "Name": "Lista de Compras",
    "Version": "1.0.1",
    "Company": "ListaCompras",
    "Environment": "Production"
  },
  "Database": {
    "Provider": "Sqlite",
    "ConnectionString": "Data Source=ListaCompras.db",
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "CommandTimeout": 30,
    "MaxRetryCount": 3,
    "RetryWaitSeconds": 5,
    "PoolSize": 128
  },
  "Cache": {
    "Provider": "Redis",
    "ConnectionString": "localhost:6379",
    "InstanceName": "ListaCompras_",
    "DefaultExpirationMinutes": 30,
    "DefaultSlidingMinutes": 10,
    "EnableSlidingExpiration": true,
    "MaxMemoryMB": 1024,
    "CompressData": true
  },
  "Sync": {
    "Enabled": true,
    "DiscoveryPort": 45678,
    "SyncPort": 45679,
    "DiscoveryIntervalMs": 5000,
    "SyncIntervalMs": 30000,
    "PeerTimeoutMs": 15000,
    "MaxRetries": 3,
    "RetryDelayMs": 1000
  },
  "Security": {
    "HashIterations": 10000,
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7,
    "RequireHttps": true,
    "EnableTwoFactor": true,
    "PasswordRequirements": {
      "MinimumLength": 8,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireSpecialCharacter": true
    }
  },
  "Logging": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 5242880,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "flushToDiskInterval": "00:00:01"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "UI": {
    "Theme": {
      "Name": "Light",
      "EnableDarkMode": true,
      "AccentColor": "#007AFF",
      "FontFamily": "Segoe UI",
      "FontSize": {
        "Small": 12,
        "Normal": 14,
        "Large": 16,
        "ExtraLarge": 18
      }
    },
    "Layout": {
      "Responsive": true,
      "MinWidth": 800,
      "MinHeight": 600,
      "DefaultWidth": 1024,
      "DefaultHeight": 768,
      "Margins": {
        "Small": 8,
        "Normal": 16,
        "Large": 24
      }
    },
    "Animations": {
      "Enabled": true,
      "Duration": {
        "VeryFast": 100,
        "Fast": 200,
        "Normal": 300,
        "Slow": 400
      }
    }
  },
  "Features": {
    "EnableOfflineMode": true,
    "EnableAutoSync": true,
    "EnableAutoBackup": true,
    "EnableDataCompression": true,
    "EnableEncryption": true,
    "MaxBackupCount": 5,
    "MaxListsPerUser": 100,
    "MaxItemsPerList": 1000,
    "EnableSharing": true,
    "EnableExport": true,
    "ExportFormats": ["PDF", "Excel", "CSV"],
    "EnableImport": true,
    "ImportFormats": ["Excel", "CSV"]
  },
  "Notifications": {
    "Enabled": true,
    "Types": {
      "Updates": true,
      "Backups": true,
      "Sync": true,
      "Sharing": true
    },
    "Sound": {
      "Enabled": true,
      "Volume": 0.7
    },
    "AutoDismiss": {
      "Enabled": true,
      "DelaySeconds": 5
    }
  },
  "Performance": {
    "EnableCaching": true,
    "CacheSize": 256,
    "EnableCompression": true,
    "CompressionLevel": "Optimal",
    "BatchSize": 100,
    "MaxConcurrentOperations": 5,
    "QueryTimeout": 30,
    "EnableQueryCache": true,
    "QueryCacheDuration": 5
  },
  "ErrorHandling": {
    "ShowDetailedErrors": false,
    "LogErrors": true,
    "SendErrorReports": true,
    "MaxErrorReports": 10,
    "ErrorReportInterval": 24,
    "IncludeSystemInfo": true
  }
}